@model IdentityServer.Models.AuthViewModel
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Image</title>
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/image.css")" />

</head>
<body>
    <div id="upload-container">
        <label for="file-input" id="file-input-label">
            <span>Нажмите и загрузите вашу картинку</span>
            <span id="file-input-text">Файл не выбран</span>
            <input type="file" id="file-input" accept=".png" onchange="updateFileName()" />
        </label>
        <button  onclick="uploadFile()">Загрузить</button>
    </div>

    <script>
        function updateFileName() {
            const fileInput = document.getElementById('file-input');
            const fileName = fileInput.files[0] ? fileInput.files[0].name : 'Файл не выбран';
            document.getElementById('file-input-text').textContent = fileName;
        }

        function uploadFile() {
            const fileInput = document.getElementById('file-input').files[0];
            if (fileInput) {
                const fileName = fileInput.name.toLowerCase();
                if (fileName.endsWith('.png')) {
                    alert('Файл успешно загружен: ' + fileInput.name);
                } else {
                    alert('Пожалуйста, выберите файл в формате .png.');
                }
            } else {
                alert('Пожалуйста, выберите файл для загрузки.');
            }
        }
    </script>
</body>
</html>
